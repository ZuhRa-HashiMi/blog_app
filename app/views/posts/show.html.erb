<%# <h4>All the post from users are avalible here.</h4> %>
<div class = "container">
<div class = "post-container">
<div class = "post-header">
<p>
<%= @post.title %> by <%= @post.author.name %>
</p>
<p>Comments:
<%= @post.comments_counter %> Likes: <%= @post.likes_counter %></p>
</div>
<p class = "post-text">
<%= @post.text %></p>
</div>
<div>
</div class = "comment-section">

<% @comment.each do |c| %>
<%= c.user.name + ":" + c.text %>
    
<% end %>

</div>