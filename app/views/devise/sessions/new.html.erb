<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group mb-3">
    <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="field form-group mb-3">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
  </div>

  <div class="actions d-grid gap-2">
    <%= f.submit "Log in", class: "btn btn-outline-dark" %>
  </div>
<% end %>
